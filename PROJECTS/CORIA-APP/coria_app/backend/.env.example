# =====================================================
# CORIA BACKEND ENVIRONMENT CONFIGURATION
# =====================================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Solana Configuration
SOLANA_NETWORK=mainnet
# Options: devnet, mainnet-beta, testnet
RPC_ENDPOINT=https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com

# Premium Configuration
PREMIUM_PRICE_SOL=0.02
# 1 SOL = 1 month premium

# Solana Pool Addresses
DONATION_POOL_PUBKEY=7oV4PGX3nvkfCaeJqZgqTW2HkY36xg3JefNWqRQ7XWHZ
PREMIUM_POOL_PUBKEY=GKRh2ccdwF4wMSndVfZgrcodQHSN9GxU2iLCiNTHjDxF
# Replace with actual pool addresses

# KMS Configuration
KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012
# AWS KMS key for custodial wallet encryption
KMS_REGION=us-east-1
KMS_ENABLED=false
# Set to true for production with real KMS

# Redis Configuration (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
# Options: error, warn, info, debug

# Security
CORS_ORIGINS=http://localhost:3000,https://coria.app
HELMET_ENABLED=true

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key-here
WEBHOOK_TIMEOUT=5000

# Job Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=2000

# Database Cleanup
CLEANUP_INTERVAL_HOURS=24
DATA_RETENTION_DAYS=90

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_BACKGROUND_JOBS=true
ENABLE_RATE_LIMITING=true
ENABLE_SWAGGER=true

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false